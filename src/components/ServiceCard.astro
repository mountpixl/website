---
interface Props {
  title: string;
  description: string;
  icon: string;
  outcomes: string[];
  id?: string;
}

const { title, description, icon, outcomes, id } = Astro.props;
---

<div id={id} class="group bg-white rounded-2xl p-8 border border-gray-200 hover:border-gold/40 transition-all duration-300 hover:shadow-elevated hover:-translate-y-1">
  <div class="w-14 h-14 rounded-xl bg-forest/10 flex items-center justify-center mb-6 group-hover:bg-gold/20 transition-colors">
    <span class="text-2xl" set:html={icon} />
  </div>
  <h3 class="font-heading text-xl font-bold text-deep-green mb-3">{title}</h3>
  <p class="text-gray-600 text-sm leading-relaxed mb-5">{description}</p>
  <ul class="space-y-2">
    {outcomes.map((outcome) => (
      <li class="flex items-start gap-2 text-sm text-gray-600">
        <svg class="w-4 h-4 text-forest mt-0.5 shrink-0" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
        </svg>
        {outcome}
      </li>
    ))}
  </ul>
</div>
