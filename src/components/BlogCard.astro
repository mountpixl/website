---
interface Props {
  title: string;
  description: string;
  date: string;
  category: string;
  slug: string;
}

const { title, description, date, category, slug } = Astro.props;

const formattedDate = new Date(date).toLocaleDateString('en-CA', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
---

<article class="group bg-white rounded-2xl border border-gray-200 overflow-hidden hover:border-gold/40 transition-all duration-300 hover:shadow-elevated hover:-translate-y-1">
  <div class="h-48 bg-gradient-to-br from-forest/10 to-teal/10 flex items-center justify-center">
    <svg class="w-12 h-12 text-forest/30 group-hover:text-gold/50 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19.5 14.25v-2.625a3.375 3.375 0 00-3.375-3.375h-1.5A1.125 1.125 0 0113.5 7.125v-1.5a3.375 3.375 0 00-3.375-3.375H8.25m0 12.75h7.5m-7.5 3H12M10.5 2.25H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 00-9-9z" />
    </svg>
  </div>
  <div class="p-6">
    <div class="flex items-center gap-3 mb-3">
      <span class="px-2.5 py-0.5 bg-forest/10 text-forest text-xs font-medium rounded-full">{category}</span>
      <time class="text-xs text-gray-400">{formattedDate}</time>
    </div>
    <h3 class="font-heading text-lg font-bold text-deep-green mb-2 group-hover:text-forest transition-colors">
      <a href={`/blog/${slug}`} class="block">{title}</a>
    </h3>
    <p class="text-gray-600 text-sm leading-relaxed line-clamp-2">{description}</p>
    <a href={`/blog/${slug}`} class="inline-flex items-center gap-1 mt-4 text-sm font-medium text-forest hover:text-gold transition-colors">
      Read more
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
      </svg>
    </a>
  </div>
</article>
